#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * create_array - creates an array of chars, and initializes it with a specific char
 * @c: the char to initialise
 * @size: the size of the array
 *
 * Return: Nothing.
 */

char *create_array(unsigned int size, char c){
char *a;
unsigned int b;

a = malloc(sizeof(char) * size);
if (size == 0 || a == NULL)
return (NULL);

for (b = 0; b < size; b++)
{
a(b) = c;
} 

}
